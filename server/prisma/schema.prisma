generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model Employee {
  id        Int     @id @default(autoincrement())
  name      String
  role      String
  tasks     Task[]
}

model Task {
  id         Int      @id @default(autoincrement())
  title      String
  assignedTo Employee? @relation(fields: [employeeId], references: [id])
  employeeId Int?
  status     String   @default("Pending")
}
