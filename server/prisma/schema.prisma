// server/prisma/schema.prisma

datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String
  tasks     Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String
  employeeId  Int
  employee    Employee @relation(fields: [employeeId], references: [id])
}
